<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GroupDetails1" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
       
        android:layout_marginTop="31dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />
	<RelativeLayout 
	    
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/relLayout1"
	    >
	     <TextView
            android:id="@+id/SetUp_Jer1_QuestionsTitle"
            style="@style/JerusalemSetUpQus"
            android:text="@string/SetUpJer1QuTitle" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
	    
	    <TextView
	         android:id="@+id/SetUp_Jer1_Questions_NoOfPeople"
            style="@style/JerusalemSetUpQus"
            android:text="@string/SetUpJer1NoOfPeople"
            android:layout_width="250dp"
            android:layout_below="@id/SetUp_Jer1_QuestionsTitle" 
            />

	    <EditText
	        android:layout_marginLeft="20dp"
	        android:id="@+id/SetUp_Jer1_Input_NoOfPeople"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:layout_alignTop="@id/SetUp_Jer1_Questions_NoOfPeople"
	        android:layout_toRightOf="@id/SetUp_Jer1_Questions_NoOfPeople"
	        android:ems="10"
	        android:imeOptions="actionDone"
	        android:inputType="number" >
	        <requestFocus/>
	    </EditText>
	        
	        

	   <TextView
            android:id="@+id/SetUp_Jer1_Questions_NameOfGroup"
            style="@style/JerusalemSetUpQus"
            android:layout_width="250dp"
            android:text="@string/SetUpJer1NameOfGroup" 
            android:layout_below="@id/SetUp_Jer1_Questions_NoOfPeople"
            />

        <EditText
            android:id="@+id/SetUp_Jer1_Input_NameOfGroup"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" 
            android:layout_marginLeft="20dp"
            android:layout_alignBaseline="@id/SetUp_Jer1_Questions_NameOfGroup"
            android:layout_toRightOf="@id/SetUp_Jer1_Questions_NameOfGroup"
            android:imeOptions="actionGo"
           />
	      
		<Button
		    android:id="@+id/GroupDetailsInfoButton"
		    android:layout_width="250dp"
		    android:layout_height="50dp"
		    android:layout_centerHorizontal="true"
		    android:text="@string/click_here1"
		    android:layout_below="@id/SetUp_Jer1_Questions_NameOfGroup"
		    		    />
		  
	    
	</RelativeLayout>
 	<RelativeLayout
	    android:id="@+id/playersNameOuter"
	    android:layout_width="600dp"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/relLayout1"
	    android:background="#eff003"
	   
	     >
		<TextView 
		    android:id="@+id/displayMessage"
		    android:layout_alignParentTop="true"
		    android:layout_height="0dp"
		    android:textSize="20dp"
		    android:layout_width="fill_parent"
		    android:layout_centerHorizontal="true"
		    />
		<ScrollView 
		    android:id="@+id/playerNameScroller"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content">
 	    <RelativeLayout
	    android:id="@+id/playersNameLayout"
	    android:layout_width="600dp"
	    android:layout_height="wrap_content"
	    android:background="#eff003"
	    >
		
		</RelativeLayout>
		</ScrollView>
	</RelativeLayout>
	<Button
	    android:id="@+id/GroupDetailsButton1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/relLayout1"
	    android:layout_alignParentRight="true"
	    android:text="@string/GroupDetailsButtonText" />
		
</RelativeLayout>
